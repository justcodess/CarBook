@model UpdateFeatureDto

@{
    ViewData["Title"] = "UpdateFeature";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Add New Feature</h4>
                        <p class="card-subtitle mb-4">Update features related to cars area.Please enter values in multiples of 3 to maintain theme consistency</p>

                        <form asp-action="UpdateFeature" method="post">
                            <input type="hidden" asp-for="FeatureID" />
                           
                            <div class="form-group">
                                <label for="exampleInputName">Feature</label>
                                <input type="text" class="form-control" id="exampleInputName" asp-for="Name" placeholder="Enter New Car Feature">
                            </div>
                           
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Submit</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

