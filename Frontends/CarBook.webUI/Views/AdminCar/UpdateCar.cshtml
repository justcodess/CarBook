@model UpdateCarDto

@{
    ViewData["Title"] = "UpdateCar";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Add New Vehicle</h4>
                        <p class="card-subtitle mb-4">Update features related to cars area</p>

                        <form asp-action="UpdateCar" method="post">
                            <input type="hidden" asp-for="CarID"/>
                            <div class="form-group">
                                <label for="exampleInputBrand">Brand</label>
                                @Html.DropDownListFor(x => x.BrandID, (List<SelectListItem>)ViewBag.BrandID, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label for="exampleInputModel">Model</label>
                                <input type="text" class="form-control" id="exampleInputModel" asp-for="Model" placeholder="Enter Car Model Info">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputCoverImgUrl">CoverImgUrl</label>
                                <input type="text" class="form-control" id="exampleInputCoverImgUrl" asp-for="CoverImgUrl" placeholder="Enter Car Cover Image Url">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputKm">Km</label>
                                <input type="text" class="form-control" id="exampleInputKm" asp-for="Km" placeholder="Please Enter Car Km">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputTransmission">Transmission</label>
                                <input type="text" class="form-control" id="exampleInputTransmission" asp-for="Transmission" placeholder="Please Enter Car Transmission Info">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputSeat">Seat</label>
                                <input type="number" class="form-control" id="exampleInputSeat" asp-for="Seat" placeholder="Please Enter Number of Seat">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputLuggage">Luggage</label>
                                <input type="number" class="form-control" id="exampleInputLuggage" asp-for="Luggage" placeholder="Please Enter Number of Luggage ">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputFuel">Fuel</label>
                                <input type="text" class="form-control" id="exampleInputFuel" asp-for="Fuel" placeholder="Please Enter Car Fuel Info">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputBigImgUrl">BigImgUrl</label>
                                <input type="text" class="form-control" id="exampleInputBigImgUrl" asp-for="BigImgUrl" placeholder="Please Enter Car Big Image Url">
                            </div>

                            <button type="submit" class="btn btn-primary waves-effect waves-light">Submit</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

