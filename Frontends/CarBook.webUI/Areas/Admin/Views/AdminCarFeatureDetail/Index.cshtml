@model List<ResultCarFeatureByCarIdDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title"> Car Feature List</h4>
                        <p class="card-subtitle mb-4">
                            This panel allows administrators to add new features to a vehicle, update existing features, or remove them.
                        </p>

                        <form method="post">
                            @for (int i=0; i < Model.Count; i++){
                                <div class="form-check">
                                <input type="hidden" asp-for="@Model[i].CarFeatureID"/>
                                 <input type="hidden" asp-for="@Model[i].FeatureName" />
                                  <input type="checkbox" asp-for="@Model[i].Available" class="form-check-input"  />
									<label for="@Model[i].Available" class="form-check-label">
										@Model[i].FeatureName</label>

                            </div>
                            }
							<button type="submit" class="btn btn-success mt-3">Save Changes</button>
                        </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



