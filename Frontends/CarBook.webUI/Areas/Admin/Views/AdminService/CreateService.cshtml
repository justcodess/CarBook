@model CreateServiceDto
@{
    ViewData["Title"] = "CreateService";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Add New Service</h4>
                        <p class="card-subtitle mb-4">
                            Add Service area related to cars .
                        </p>

                        <form asp-action="CreateService" method="post">


                            <div class="form-group">
                                <label for="exampleInputModel">Service Name</label>
                                <input type="text" class="form-control" id="exampleInputModel" asp-for="Title" placeholder="Enter Service Title">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputModel">Service Description</label>
                                <input type="text" class="form-control" id="exampleInputModel" asp-for="Description" placeholder="Enter  Service Description">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputModel">Video Url</label>
                                <input type="text" class="form-control" id="exampleInputModel" asp-for="ImageUrl" placeholder="Add Service Video Url">
                            </div>

                            <button type="submit" class="btn btn-primary waves-effect waves-light">Submit</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


