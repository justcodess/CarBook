@model UpdateAuthorDto

@{
    ViewData["Title"] = "UpdateAuthor";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Update Author Area</h4>
                        <p class="card-subtitle mb-4">Update Authors related to cars area.</p>

                        <form asp-action="UpdateAuthor" method="post">
                            <input type="hidden" asp-for="AuthorID" />

                            <div class="form-group">
                                <label for="exampleInputName">Author Name</label>
                                <input type="text" class="form-control" id="exampleInputName" asp-for="Name" placeholder="Enter Author Name">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputDescription">Author Description</label>
                                <input type="text" class="form-control" id="exampleInputDescription" asp-for="Description" placeholder="Enter Author Description">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputImageUrl">Author Image Url</label>
                                <input type="text" class="form-control" id="exampleInputImageUrl" asp-for="ImageUrl" placeholder="Enter Author Video Url">
                            </div>

                            <button type="submit" class="btn btn-primary waves-effect waves-light">Submit</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

