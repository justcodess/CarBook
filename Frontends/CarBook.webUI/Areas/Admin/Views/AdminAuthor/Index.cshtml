@model List<ResultAuthorDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}
<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Home Author Area</h4>
                        <p class="card-subtitle mb-4">
                            You can edit the information displayed in the homepage Author below.
                            To maintain layout integrity, please create only one Author.

                        </p>
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>Author Name</th>
                                        <th>Description</th>
                                        <th>Image Url</th>
                                        <th>Delete</th>
                                        <th>Update</th>
                                        <th>The Author’s Blogs</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <th scope="row">@count</th>
                                            <td>@item.Name</td>
                                            <td>@item.Description</td>
                                            <td>@item.ImageUrl</td>

                                            <td>
                                                <a href="/Admin/AdminAuthor/RemoveAuthor/@item.AuthorID"
                                                   class="btn btn-outline-danger">Delete</a>
                                            </td>
                                            <td>
                                                <a href="/Admin/AdminAuthor/UpdateAuthor/@item.AuthorID"
                                                   class="btn btn-outline-success">Update</a>
                                            </td>
                                            <td>
                                                <a href="/Admin/AdminAuthor/#/@item.AuthorID"
                                                   class="btn btn-outline-dark">Author’s Blogs</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <a href="/Admin/AdminAuthor/CreateAuthor/" class="btn btn-outline-primary"> Add New Author></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

