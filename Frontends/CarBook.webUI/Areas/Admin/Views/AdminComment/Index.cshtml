@model List<ResultCommentDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}
<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title"> Comment List - BlogID: @ViewBag.blogId</h4>
                        <p class="card-subtitle mb-4">
                            This section allows you to manage blog comments. You can remove comments or enable them again.

                        </p>
                        @foreach (var item in Model)
                        {
							count++;
                            <div class="col-md-12">
                                <div class="card">
                                    <h5 class="card-header">Comment - @count</h5>
                                    <div class="card-body">
                                        <h4 class="card-title">@item.Name</h4>
                                        <p class="card-text">
                                            @item.CommentLayer
                                        </p>
                                        <a href="#" class="btn btn-primary waves-effect waves-light">Go Blog</a>
                                    </div>
                                </div>
                            </div>
                        }
                        )

                    </div>
                </div>
            </div>
        </div>
    </div>

