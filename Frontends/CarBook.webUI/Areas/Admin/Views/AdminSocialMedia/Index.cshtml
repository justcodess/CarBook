@model List<ResultSocialMediaDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}
<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Home SocialMedia Area</h4>
                        <p class="card-subtitle mb-4">
                            You can edit the information displayed in the homepage SocialMedia below.
                            To maintain layout integrity, please create only one SocialMedia.

                        </p>
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Social Media Name</th>
                                        <th>Social Media Url</th>
                                        <th>Icon Url </th>
                                        <th>Delete</th>
                                        <th>Update</th>
                                        <th>Open Link</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <th scope="row">@count</th>
                                            <td>@item.Name</td>
                                            <td>@item.Url</td>
                                            <td>@item.IconUrl</td>

                                            <td>
                                                <a href="/Admin/AdminSocialMedia/RemoveSocialMedia/@item.SocialMediaID"
                                                   class="btn btn-outline-danger">Delete</a>
                                            </td>
                                            <td>
                                                <a href="/Admin/AdminSocialMedia/UpdateSocialMedia/@item.SocialMediaID"
                                                   class="btn btn-outline-success">Update></a>
                                            </td>
                                            <td>
                                                <a href="/Admin/AdminSocialMedia/SocialMediaDetail/@item.SocialMediaID"
                                                   class="btn btn-outline-success">Open Link></a>
                                            </td>
                                          
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <a href="/Admin/AdminSocialMedia/CreateSocialMedia/" class="btn btn-outline-primary"> Add New SocialMedia></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
