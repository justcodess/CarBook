@model CreateLocationDto

@{
    ViewData["Title"] = "CreateLocation";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Add New Location</h4>
                        <p class="card-subtitle mb-4">
                            Location information can be entered in the section below.
                        </p>

                        <form asp-action="CreateLocation" method="post">


                            <div class="form-group">
                                <label for="exampleInputName">Location</label>
                                <input type="text" class="form-control" id="exampleInputName" asp-for="Name" placeholder="Enter Location Info">
                            </div>



                            <button type="submit" class="btn btn-primary waves-effect waves-light">Submit</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


