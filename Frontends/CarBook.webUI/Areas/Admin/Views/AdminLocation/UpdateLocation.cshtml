@model UpdateLocationDto

@{
    ViewData["Title"] = "UpdateLocation";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Update Location </h4>
                        <p class="You can update the location data in the section below."</p>

                        <form asp-action="UpdateLocation" method="post">
                            <input type="hidden" asp-for="LocationID" />

                            <div class="form-group">
                                <label for="exampleInputTitle">Location</label>
                                <input type="text" class="form-control" id="exampleInputTitle" asp-for="Name" placeholder="Update Location Info">
                            </div>

                            <button type="submit" class="btn btn-primary waves-effect waves-light">Submit</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

