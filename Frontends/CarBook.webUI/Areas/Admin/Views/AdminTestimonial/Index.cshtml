@model List<ResultTestimonialDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}
<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Home Testimonial Area</h4>
                        <p class="card-subtitle mb-4">
                            You can edit the information displayed in the homepage Testimonial below.
                            To maintain layout integrity, please create only one Testimonial.

                        </p>
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>User Name</th>
                                        <th>Title</th>
                                        <th>Comment</th>
                                        <th>ImageUrl</th>
                                        <th>Delete</th>
                                        <th>Update</th>
                                        <th>Go Comment</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <th scope="row">@count</th>
                                            <td>@item.Name</td>
                                            <td>@item.Title</td>
                                            <td>@item.Comment</td>
                                            <td>@item.ImageUrl</td>

                                            <td>
                                                <a href="/Admin/AdminTestimonial/RemoveTestimonial/@item.TestimonialID"
                                                   class="btn btn-outline-danger">Delete</a>
                                            </td>
                                            <td>
                                                <a href="/Admin/AdminTestimonial/UpdateTestimonial/@item.TestimonialID"
                                                   class="btn btn-outline-success">Update</a>
                                            </td>
                                            <td>
                                                <a href="/Admin/AdminTestimonial/TestimonialDetail/@item.TestimonialID"
                                                   class="btn btn-outline-success">Go Comment</a>
                                            </td>

                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <a href="/Admin/AdminTestimonial/CreateTestimonial/" class="btn btn-outline-primary"> Add New Testimonial></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
