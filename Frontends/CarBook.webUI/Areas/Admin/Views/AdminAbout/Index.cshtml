@model List<ResultAboutDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Home About Area</h4>
                        <p class="card-subtitle mb-4">
                            You can edit the information displayed in the homepage about below.
                            To maintain layout integrity, please create only one About.

                        </p>
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Title</th>
                                        <th>Description</th>
                                        <th>Image Url</th>
                                        <th>Delete</th>
                                        <th>Update</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {

                                        <tr>

                                            <td>@item.Title</td>
                                            <td>@item.Description</td>
                                            <td>@item.ImageUrl</td>

                                            <td>
                                                <a href="/Admin/AdminAbout/RemoveAbout/@item.AboutID"
                                                   class="btn btn-outline-danger">Delete</a>
                                            </td>
                                            <td>
                                                <a href="/Admin/AdminAbout/UpdateAbout/@item.AboutID"
                                                   class="btn btn-outline-success">Update></a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <a href="/Admin/AdminAbout/CreateAbout/" class="btn btn-outline-primary"> Add New About></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

