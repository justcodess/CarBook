@model List<ResultCategoryDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title"> Category List</h4>
                        <p class="card-subtitle mb-4">
                            You can add the  Category below.

                        </p>
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>Category Name</th>
                                        <th>Delete</th>
                                        <th>Update</th>
										<th>Category Blogs</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {

                                        <tr>
                                            <td>@item.Name</td>
                                            <td>
                                                <a href="/Admin/AdminCategory/RemoveCategory/@item.CategoryId"
                                                   class="btn btn-outline-danger">Delete</a>
                                            </td>
                                            <td>
                                                <a href="/Admin/AdminCategory/UpdateCategory/@item.CategoryId"
                                                   class="btn btn-outline-success">Update</a>
                                            </td>
                                            <td>
                                                <a href="/Admin/AdminCategory/#/@item.CategoryId"
                                                   class="btn btn-outline-dark">Category Blogs</a>
                                            </td>
                                           
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <a href="/Admin/AdminCategory/CreateCategory/" class="btn btn-outline-primary"> Add New Category></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

