@model UpdateCategoryDto

@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Update Category Name</h4>
                        <p class="card-subtitle mb-4">Update Categorys name below.</p>

                        <form asp-action="UpdateCategory" method="post">
                            <input type="hidden" asp-for="CategoryId" />

                            <div class="form-group">
                                <label for="exampleInputName">Category Name</label>
                                <input type="text" class="form-control" id="exampleInputName" asp-for="Name" placeholder="Enter Category Name">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Submit</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

