@model CreateCategoryDto
@{
    ViewData["Title"] = "CreateCategory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Add New Category</h4>
                        <p class="card-subtitle mb-4">
                            Add Category  related to blogs
                        </p>

                        <form asp-action="CreateCategory" method="post">


                            <div class="form-group">
                                <label for="exampleInputName">Category Name</label>
                                <input type="text" class="form-control" id="exampleInputName" asp-for="Name" placeholder="Enter Category Name">
                            </div>
                            
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Submit</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


